<%= form_for model, html: { class: "max-w-lg mx-auto my-4 md:my-20" } do |f| %>
  <h2 class="text-3xl font-thin">Sign into your account<h2>
  <div class="mb-4">
    <%= link_to "I need to create an account", "#", class: primary_link_class %>
  </div>
  <% if model.errors[:base].any? %>
    <p class="text-red-400 mb-4"><%= model.errors[:base].to_sentence %></p>
  <% end %>
  <%= f.hidden_field :return_path %>
  <div class="mb-4">
    <%= f.text_field :username, placeholder: "Email", class: text_field_class(model.errors[:username].any?), autocomplete: "off" %>
    <%= render "common/errors", errors: model.errors[:username] %>
  </div>
  <div class="mb-4">
    <%= f.password_field :password, placeholder: "Password", class: text_field_class(model.errors[:password].any?), autocomplete: "off" %>
    <%= render "common/errors", errors: model.errors[:password] %>
  </div>
  <div class="-mt-2 mb-4">
    <%= link_to "I forgot my password", "#", class: secondary_link_class %>
  </div>
  <div class="md:mt-12">
    <%= button_tag "Sign In", type: "submit", class: primary_button_class %>
  </div>
<% end %>
