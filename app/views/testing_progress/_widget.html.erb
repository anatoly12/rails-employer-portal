      <%= render "testing_progress/step", health_passport: health_passport, label: "Intake" %>
      <%= render "testing_progress/step", health_passport: health_passport, label: "Received Lab Order" %>
      <%= render "testing_progress/step", health_passport: health_passport, label: "Submitted Results" %>
