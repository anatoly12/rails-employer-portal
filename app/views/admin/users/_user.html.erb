<tr class="hover:text-blue-700">
  <td class="py-4 px-6 border-b border-gray-200 whitespace-no-wrap">
    <%= user.created_at.strftime("%F") %>
  </td>
  <td class="py-4 px-6 border-b border-gray-200"><%= user.email %></td>
  <td class="py-4 px-6 border-b border-gray-200">
    <% if user.myself? %>
      <%= render "icon/checkmark", icon_class: "text-green-500 h-6 w-6 mx-auto" %>
    <% end %>
  </td>
  <td class="py-4 px-6 border-b border-gray-200 whitespace-no-wrap">
    <%= link_to({ action: :edit, id: user }, class: "text-gray-100 font-bold text-xs bg-blue-400 hover:bg-blue-500 rounded-lg pl-4 pr-6 py-2 inline-flex items-center") do %>
      <%= render "icon/edit_pencil", icon_class: "w-3 h-3 mr-2" %>
      Edit
    <% end %>
  </td>
</tr>
