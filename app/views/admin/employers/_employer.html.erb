<tr class="hover:text-blue-700">
  <td class="py-4 px-6 border-b border-gray-200 whitespace-no-wrap">
    <%= employer.created_at.strftime "%F" %>
  </td>
  <td class="py-4 px-6 border-b border-gray-200">
    <%= employer.company_name %>
  </td>
  <td class="py-4 px-6 border-b border-gray-200"><%= employer.role %></td>
  <td class="py-4 px-6 border-b border-gray-200"><%= employer.first_name %></td>
  <td class="py-4 px-6 border-b border-gray-200"><%= employer.last_name %></td>
  <td class="py-4 px-6 border-b border-gray-200"><%= employer.email %></td>
  <% if employer.allowed_to_add_employees %>
    <td class="py-4 px-6 border-b border-gray-200 text-green-500">
      Allowed
    </td>
  <% else %>
    <td class="py-4 px-6 border-b border-gray-200 text-red-600">
      Not allowed
    </td>
  <% end %>
  <% if employer.allowed_to_add_employee_tags %>
    <td class="py-4 px-6 border-b border-gray-200 text-green-500">
      Allowed
    </td>
  <% else %>
    <td class="py-4 px-6 border-b border-gray-200 text-red-600">
      Not allowed
    </td>
  <% end %>
  <% if employer.allowed_all_employee_tags %>
    <td class="py-4 px-6 border-b border-gray-200 text-green-500">
      Unlimited
    </td>
  <% else %>
    <td class="py-4 px-6 border-b border-gray-200 text-red-600">
      Restricted (<%= employer.allowed_employee_tags.length %>)
    </td>
  <% end %>
  <td class="py-4 px-6 border-b border-gray-200 whitespace-no-wrap">
    <%= link_to({ action: :edit, id: employer }, class: "text-gray-100 font-bold text-xs bg-blue-400 hover:bg-blue-500 rounded-lg pl-4 pr-6 py-2 inline-flex items-center") do %>
      <%= render "icon/edit_pencil", icon_class: "w-3 h-3 mr-2" %>
      Edit
    <% end %>
  </td>
</tr>
