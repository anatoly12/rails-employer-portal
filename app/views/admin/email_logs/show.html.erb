<%= render "admin/common/top_nav_container" do %>
  <%= render "admin/common/top_nav_item", title: "Email logs", path: { action: :index } %>
  <%= render "admin/common/top_nav_item", title: "Email log ##{viewer.id}", path: { action: :show, id: viewer } %>
<% end %>
<div class="mt-10 p-5 pb-0">
  <div class="bg-white shadow-md rounded p-8">
    <div class="flex items-center mb-10">
      <div class="w-32 text-3xl font-thin text-right pr-10">Sent at</div>
      <div id="email_log_sent_at" class="flex-1 py-1 text-blue-500 border-b"><%= viewer.created_at %></div>
    </div>
    <div class="flex items-center mb-10">
      <div class="w-32 text-3xl font-thin text-right pr-10">From</div>
      <div id="email_log_from" class="flex-1 py-1 text-blue-500 border-b"><%= viewer.from %></div>
    </div>
    <div class="flex items-center mb-10">
      <div class="w-32 text-3xl font-thin text-right pr-10">To</div>
      <div id="email_log_recipient" class="flex-1 py-1 text-blue-500 border-b"><%= viewer.recipient %></div>
    </div>
    <div class="flex items-center mb-10">
      <div class="w-32 text-3xl font-thin text-right pr-10">Subject</div>
      <div id="email_log_subject" class="flex-1 py-1 text-blue-500 border-b"><%= viewer.subject %></div>
    </div>
    <div class="grid grid-cols-2 gap-20">
      <div>
        <div class="text-3xl font-thin">HTML</div>
        <iframe id="email_log_html" class="w-full border h-64 overflow-y-scroll" srcdoc="<%= viewer.html %>"></iframe>
      </div>
      <div>
        <div class="text-3xl font-thin">Text</div>
        <div id="email_log_text" class="p-5 text-blue-500 border h-64 overflow-y-scroll whitespace-pre-line"><%= viewer.text %></div>
      </div>
    </div>
  </div>
</div>

