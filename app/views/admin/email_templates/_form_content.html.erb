<div class="flex">
  <div class="w-1/3">
    <div class="text-black font-medium mt-16 mb-4">Possible merge tags:</div>
    <ul class="mb-4">
      <%= render "admin/email_templates/placeholder", code: "full_name", label: "Recipient full name" %>
      <%= render "admin/email_templates/placeholder", code: "password_reset_token", label: "Password reset token" %>
    </ul>
  </div>
  <div class="flex-1 pl-10">
    <div class="flex justify-between mb-4">
      <div>
        <div id="toggle-format" class="inline-flex">
          <a class="bg-gray-500 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-l cursor-pointer">
            HTML
          </a>
          <a class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-r cursor-pointer">
            Text
          </a>
        </div>
      </div>
      <div id="html-help" class="relative flex">
        <a href="https://www.campaignmonitor.com/css/" target="_blank" rel="noopener noreferrer" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded flex items-center justify-center mr-4" title="Guide: what part of CSS can actually be used in emails?">
          <%= render "icon/question", icon_class: "w-4 h-4" %>
        </a>
        <div id="toggle-preview" class="inline-flex">
          <a class="bg-gray-500 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-l cursor-pointer">
            Code
          </a>
          <a class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-r cursor-pointer">
            Preview
          </a>
        </div>
      </div>
    </div>
    <%= render "form/textarea", form: form, column: :html, label: false, codemirror: "htmlmixed" %>
    <%= render "form/textarea", form: form, column: :text, label: false, codemirror: "null" %>
    <div id="html-preview" class="border bg-white overflow-scroll hidden" style="height:302px"></div>
  </div>
</div>
