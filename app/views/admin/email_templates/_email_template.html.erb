<tr class="hover:text-blue-700">
  <td class="py-4 px-6 border-b border-gray-200 whitespace-no-wrap">
    <%= email_template.created_at.strftime("%F") %>
  </td>
  <td class="py-4 px-6 border-b border-gray-200"><%= email_template.name %></td>
  <td class="py-4 px-6 border-b border-gray-200"><%= email_template.trigger %></td>
  <td class="py-4 px-6 border-b border-gray-200"><%= email_template.plan %></td>
  <td class="py-4 px-6 border-b border-gray-200 whitespace-no-wrap">
    <%= link_to({ action: :edit, id: email_template }, class: "text-gray-100 font-bold text-xs bg-blue-400 hover:bg-blue-500 rounded-lg pl-4 pr-6 py-2 inline-flex items-center") do %>
      <%= render "icon/edit_pencil", icon_class: "w-3 h-3 mr-2" %>
      Edit
    <% end %>
  </td>
</tr>
