<%= render "admin/common/top_nav_container" do %>
  <%= render "admin/common/top_nav_item", title: "Companies", path: {action: :index} %>
  <%= render "admin/common/top_nav_item", title: "New company", path: {action: :new} %>
<% end %>
<div class="mt-10 p-5 pb-0">
  <%= form_for editor, url: {action: :create}, html: { class: "bg-white shadow-md rounded p-8", autocomplete: "off" } do |f| %>
    <%= render "form", form: f %>
    <div class="flex justify-between">
      <div>
        <%= link_to "Cancel", {action: :index}, class: "text-gray-600 hover:text-gray-900 hover:underline mr-6" %>
        <%= submit_tag "Create", class: "bg-blue-400 hover:bg-blue-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    </div>
  <% end %>
</div>
