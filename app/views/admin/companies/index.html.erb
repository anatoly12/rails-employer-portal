<%= render "admin/common/top_nav_container" do %>
  <%= render "admin/common/top_nav_item", title: "Companies", path: { action: :index } %>
<% end %>
<div class="mt-10 p-5 pb-0">
  <%= render "admin/companies/filters", filters: search.filters %>
  <%= render "admin/companies/companies", companies: search.results %>
  <div class="flex justify-between py-5 select-none">
    <div>
      <%= link_to({ action: :new }, class: "text-gray-400 hover:text-blue-500 font-bold text-xs rounded-lg inline-flex items-center pt-1") do %>
        <%= render "icon/add_outline", icon_class: "w-4 h-4 mr-2" %>
        Add a new company
      <% end %>
    </div>
    <div>
      <%== render partial: "common/pagination", locals: { pagination: search.pagination } %>
    </div>
  </div>
</div>
