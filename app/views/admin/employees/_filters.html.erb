<%= render "admin/common/filters", filters: filters do |form| %>
  <%= render "form/select", form: form, column: :company_id_equals, label: "Company", options: form.object.companies_for_select %>
  <%= render "form/text_field", form: form, column: :full_name_contains %>
  <%= render "form/text_field", form: form, column: :email_contains %>
  <%= render "form/select", form: form, column: :sync_status_equals, label: "Sync status", options: form.object.sync_statuses_for_select %>
  <% if current_context.sync_connected? %>
    <%= render "form/select", form: form, column: :daily_checkup_status_equals, label: "Daily checkup status", options: form.object.daily_checkup_statuses_for_select %>
    <%= render "form/select", form: form, column: :testing_status_equals, label: "Testing status", options: form.object.testing_statuses_for_select %>
  <% end %>
<% end %>
