<%= render "common/main" do %>
  <%= render "employees/dashboard" %>
  <% if employees.empty? %>
    <%= render "common/backdrop" do %>
      <h1 class="text-3xl font-medium">
        Welcome <%= current_context.account.first_name %>!
      </h1>
      <div class="text-2xl">Start by adding employees individually or via bulk upload.</div>
      <div class="flex flex-col items-start mt-4 -mx-2 md:flex-row md:justify-end xl:-mt-8">
        <%= link_to({ action: :new }, class: "#{secondary_button_class(:blue)} flex items-center mb-4 mx-2") do %>
          <%= render "icon/add_outline", icon_class: "h-3 w-3 mr-2" %>
          <span>Add New</span>
        <% end %>
        <%= link_to({ action: :bulk_import }, class: "#{secondary_button_class(:blue)} flex items-center mb-4 mx-2") do %>
          <%= render "icon/add_outline", icon_class: "h-3 w-3 mr-2" %>
          <span>Bulk Upload</span>
        <% end %>
      </div>
    <% end %>
  <% end %>
<% end %>
