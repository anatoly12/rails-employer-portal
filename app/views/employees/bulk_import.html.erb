<%= render "common/main" do %>
  <%= render "employees/dashboard" %>
  <%= render "common/backdrop" do %>
    <div class="bg-white text-black shadow-2xl p-4 md:max-w-xl md:mx-auto md:p-8">
      <div class="text-right">
        <%= link_to({action: :index}, class: "inline-block hover:text-blue-500 hover:border-blue-500") do %>
          <%= render "icon/close_outline", icon_class: "h-5 w-5" %>
        <% end %>
      </div>
      <h2 class="font-semibold">Please match your fields to the sample below.</h2>
      <div>
        Upload type accepted:
        <a href="/employee_bulk_import/sample.txt" class="hover:text-blue-500" target="_blank" rel="noopener noreferrer" download>Unicode Text (.txt)</a>,
        <a href="/employee_bulk_import/sample.csv" class="hover:text-blue-500" target="_blank" rel="noopener noreferrer" download>Comma-separated values (.csv)</a> or
        <a href="/employee_bulk_import/sample.tsv" class="hover:text-blue-500" target="_blank" rel="noopener noreferrer" download>Tab-separated values (.tsv)</a>
      </div>
      <%= form_tag employees_path, multipart: true, autocomplete: "off", class: "mt-4" do %>
        <a href="/employee_bulk_import/sample.txt" class="inline-flex items-center bg-white px-3 leading-6 border-2 border-blue-400 text-blue-400 font-semibold hover:text-blue-700 hover:border-blue-700 mb-4 mr-4 md:mr-8" target="_blank" rel="noopener noreferrer" download>
          <%= render "icon/arrow_outline_down", icon_class: "h-3 w-3 mr-2" %>
          <span>Download Sample</span>
        </a>
        <button href="/employee_bulk_import/sample.txt" class="<%= secondary_button_class %> inline-flex items-center overflow-hidden relative mb-4 mr-4 md:mr-8" target="_blank" rel="noopener noreferrer" download>
          <%= render "icon/arrow_outline_up", icon_class: "h-3 w-3 mr-2" %>
          <span>Upload File</span>
          <%= file_field_tag :file, class: "cursor-pointer absolute block opacity-0 left-0 top-0 w-full h-full" %>
        </button>
      <% end %>
      <%# <%= submit_tag "Import CSV" %>
    </div>
  <% end %>
<% end %>
