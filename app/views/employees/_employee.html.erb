<tr class="border-t border-black align-middle">
  <td class="w-5 select-none hidden lg:table-cell">
    <%= render "form/check_box", name: "selected[]", value: employee.uuid %>
  </td>
  <td class="w-8 lg:px-2">
    <%= render "icon/exclamation_solid", icon_class: "h-4 w-4 text-orange-500 mx-auto" %>
  </td>
  <td class="w-10 hidden md:table-cell">
    <div class="bg-gray-300 rounded-full h-10 w-10 flex items-center justify-center">
      WS
    </div>
  </td>
  <td class="px-2 py-4 truncate">
    <div class="lg:hidden"><%= employee.full_name %></div>
    <%= link_to employee.full_name, {action: :edit, id: employee.uuid}, class: "hidden underline hover:text-blue-500 lg:block" %>
  </td>
  <td class="px-2 py-4 hidden lg:table-cell">
    <%= employee.state %>
  </td>
  <td class="px-2 hidden md:table-cell">Did Not Submit</td>
  <td class="px-2 py-4 hidden lg:table-cell">04/12/20</td>
  <td class="px-2 py-4 hidden lg:table-cell">Send Reminder</td>
  <td class="px-2 hidden md:table-cell">Physician Reviewing</td>
  <td class="px-2 py-4 hidden lg:table-cell">04/12/20</td>
  <td class="px-2 py-4 hidden lg:table-cell">Send Reminder</td>
  <td class="lg:hidden">
    <%= link_to({action: :edit, id: employee.uuid}, class: "block text-gray-300 ml-auto mr-2 h-8 w-8 p-2 hover:text-blue-500") do %>
      <%= render "icon/edit_pencil", icon_class: "pointer-events-none" %>
    <% end %>
  </td>
</tr>
