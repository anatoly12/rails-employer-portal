<% errors = form.object.errors_on column %>
<div>
  <% unless local_assigns[:label] == false %>
    <%= form.label column, local_assigns[:label].presence, class: "block text-3xl font-thin mb-2" %>
  <% end %>
  <% if local_assigns[:codemirror] %>
    <div class="border">
      <%= form.text_area column, class: text_area_class(errors), placeholder: local_assigns[:placeholder].presence, data: { codemirror: local_assigns[:codemirror] } %>
    </div>
  <% else %>
    <%= form.text_area column, class: text_area_class(errors), placeholder: local_assigns[:placeholder].presence, data: { codemirror: local_assigns[:codemirror] } %>
  <% end %>
  <%= render "common/errors", errors: errors %>
</div>
