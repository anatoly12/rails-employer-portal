<header class="h-24">
  <div class="container mx-auto px-4 h-full flex items-center justify-between">
    <%= link_to root_path, id: "home", data: { "turbolinks-permanent": true } do %>
      <% if current_context.custom_logo_url %>
        <img src="<%= current_context.custom_logo_url %>" alt="<%= current_context.company.name %>" class="h-12">
      <% else %>
        <%= image_pack_tag "lockup.svg", alt: "Essential Health Passport", class: "h-12" %>
      <% end %>
    <% end %>
    <nav class="xl:text-lg xl:tracking-wide">
      <% if current_context.signed_in? %>
        <ul class="ml-auto flex items-center select-none">
          <%= render "common/header_link", label: "Dashboard", path: employees_path, controller: "employees" %>
          <%= render "common/header_link", label: "Your Plans", path: plans_path, controller: "plans" %>
          <li class="hidden m-3 text-blue-400 lg:block"><a href="#">COVID-19 Guidelines</a></li>
          <li class="hidden m-3 text-blue-400 lg:block"><a href="#">Support</a></li>
          <li id="signout" class="ml-3" data-turbolinks-permanent>
            <%= link_to sessions_path, method: :delete, class: "text-blue-400", data: { turbolinks: "false" } do %>
              <%= render "icon/account", icon_class: "w-8 h-8" %>
            <% end %>
          </li>
        </ul>
      <% else %>
        <ul class="ml-auto">
          <li class="text-blue-400"><%= render "icon/account", icon_class: "w-8 h-8" %></li>
        </ul>
      <% end %>
    </nav>
  </div>
</header>
